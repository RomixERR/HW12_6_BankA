<Window x:Class="HW12_6_BankA.ModalWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW12_6_BankA"
        mc:Ignorable="d"
        Title="ModalWindowDialog" Height="202" Width="398" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbInfo" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Инфо" VerticalAlignment="Center" Width="378" Height="61"/>
        <TextBox x:Name="tbSum" Grid.Row="1" TextWrapping="Wrap" Text="" Foreground="#FF053708" FontSize="22" FontWeight="Bold" TextAlignment="Center" Margin="80,9,80,8"/>
        <Button x:Name="btnСonfirm"  IsDefault="True"  Content="Подтвердить" Click="btnСonfirm_Click" Grid.Row="2" Width="116" HorizontalAlignment="Left" Margin="10,16,0,15"/>
        <Button x:Name="btnCanсel" IsCancel="True" Content="Отмена" Grid.Row="2" Width="116" HorizontalAlignment="Left" Margin="272,16,0,15"/>

    </Grid>
</Window>
